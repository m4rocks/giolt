---
import "@/styles/tenant.css";
import Footer from "@/components/org/footer.astro";
import Navbar from "@/components/org/navbar.astro";
import { type THEMES, THEME_COLORS } from "@/lib/data";

interface Props {
	title?: string;
	orgName: string;
	class?: string;
	theme: (typeof THEMES)[number];
	enableInstallable?: boolean;
	favicon?: string | null;
	navbar?: boolean;
	hideGioltBranding?: boolean;
}

// Function to determine favicon MIME type based on file extension
function getFaviconType(faviconUrl?: string): string {
	if (!faviconUrl) return "image/svg+xml";

	const extension = faviconUrl.split(".").pop()?.toLowerCase();
	switch (extension) {
		case "png":
			return "image/png";
		case "jpg":
		case "jpeg":
			return "image/jpeg";
		case "gif":
			return "image/gif";
		case "ico":
			return "image/x-icon";
		case "svg":
			return "image/svg+xml";
		default:
			return "image/svg+xml";
	}
}

const faviconUrl = Astro.props.favicon || "/favicon.svg";
const faviconType = getFaviconType(Astro.props.favicon || undefined);
---

<html lang="en" data-theme={Astro.props.theme}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type={faviconType} href={faviconUrl} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content={THEME_COLORS[Astro.props.theme]} />
		{Astro.props.enableInstallable ?
			<meta name="apple-mobile-web-app-capable" content="yes" />
			<meta name="apple-mobile-web-app-status-bar-style" content="black" />
			<meta name="apple-mobile-web-app-title" content={Astro.props.orgName} />
			<link rel="manifest" href="/app/manifest.json" />
		: null}
		<title>
			{Astro.props.title ? `${Astro.props.title} - ${Astro.props.orgName}` : Astro.props.orgName}
		</title>
	</head>
	<body class="flex flex-col min-h-svh">
		{Astro.props.navbar ?
			<Navbar
				logoUrl={Astro.props.favicon || undefined}
				name={Astro.props.orgName}
			/>
		: null}
		<main class:list={["flex-1", Astro.props.class]}>
			<slot/>
		</main>
		<Footer
			name={Astro.props.orgName}
			hideGioltBranding={!!Astro.props.hideGioltBranding}
		/>
	</body>
</html>
